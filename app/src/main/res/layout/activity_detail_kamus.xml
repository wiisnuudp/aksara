                    android:text="R"/>

                <Button
                    android:id="@+id/btnS"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="S"/>

                <Button
                    android:id="@+id/btnT"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="T"/>

                <Button
                    android:id="@+id/btnU"
                    android:layout_width="150dp"
