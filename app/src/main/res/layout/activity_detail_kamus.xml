                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="O"/>

                <Button
                    android:id="@+id/btnP"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="P"/>

                <Button
                    android:id="@+id/btnQ"
