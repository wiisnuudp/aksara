<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizResults">

    <ImageView
        android:id="@+id/selamatIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/orngjawa" />

    <TextView
        android:id="@+id/suksesTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selamatIcon"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Selamat kamu telah berhasil mengerjakan soal"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_below="@+id/suksesTV"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benar : 0"
            android:textStyle="bold"
            android:textColor="#00C853"/>

        <TextView
            android:id="@+id/incorrectAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Salah : 0"
            android:textStyle="bold"
            android:textColor="#DD2C00"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Start new quiz"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_back_green"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>

</RelativeLayout>